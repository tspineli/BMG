      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"
    ></script>
    <!-- Bootstrap core JavaScript -->
    <script
      type="text/javascript"
      src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/js/bootstrap.min.js"
    ></script>
    <!-- MDB core JavaScript -->
    <script
      type="text/javascript"
      src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.19.1/js/mdb.min.js"
    ></script>
    <script src="./scriptsimulador.js"></script>

	<!--     Fonts and icons     -->
	<link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" />

	<!-- CSS Files -->
	<link href="/css/material-bootstrap-wizard.css" rel="stylesheet" />


  </head>
  <body>
    <!--Main Navigation-->
    <header>
      <nav
        id="navbar"
        class="navbar fixed-top navbar-expand-lg navbar-dark black scrolling-navbar"
      >
          <div id="logo"></div>
            

        

        <button
          class="navbar-toggler"
          type="button"
          data-toggle="collapse"
          data-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
			<ul class="navbar-nav mr-auto">
				<li class="nav-item">
				  <a class="nav-link" href="./"
					>Conta Corrente</a
				  >
				</li>
	
				<li class="nav-item">
				  <a class="nav-link" href="./">Cartão de Crédito</a>
				</li>
				<li class="nav-item">
				  <a class="nav-link" href="./">Investimentos</a>
				</li>
				<li class="nav-item active">
				  <a class="nav-link" href="/credito">Empréstimo<span class="sr-only">(current)</span></a>
				</li>
			  </ul>
        </div>
      </nav>
    </header>
    <!--Main Navigation-->
        <main>
            <div class="container" style="height:94vh">

				<div class="container">
						<div class="col-sm-8 col-sm-offset-2">
							<!--      Wizard container        -->
							<div class="wizard-container">
								<div class="card wizard-card" data-color="green" id="wizard">
									<form action="/form" method="POST">
									<!--        You can switch " data-color="rose" "  with one of the next bright colors: "blue", "green", "orange", "purple"        -->
		
										<div class="wizard-header">
											<h3 class="wizard-title">
												Simulador de Crédito
											</h3>
										</div>
										<div class="wizard-navigation">
											<ul>
												<li><a href="#pessoais" data-toggle="tab">Dados Pessoais</a></li>
												<li><a href="#credito" data-toggle="tab">Crédito</a></li>
												<li><a href="#simulacao" data-toggle="tab">Simulação</a></li>
												<li><a href="#documentos" data-toggle="tab">Envio de Documentos</a></li>
											</ul>
										</div>
		
										<div class="tab-content">
											<div class="tab-pane" id="pessoais">
												<div class="row">
													<div class="col-sm-12">
														<h4 class="info-text"> Vamos começar com nome e contatos</h4>
													</div>
													<div class="col-sm-5 col-sm-offset-1">
														<div class="form-group label-floating">
															<label class="control-label">Nome</label>
															<input type="text" class="form-control" id="nome" name="nome">
														</div>
													</div>
													<div class="col-sm-5">
														<div class="form-group label-floating">
															<label class="control-label">Sobrenome</label>
															<input type="text" class="form-control" id="sobrenome" name="sobrenome">
														</div>
													</div>
													<div class="col-sm-5 col-sm-offset-1">
														<div class="form-group label-floating">
															<label class="control-label">E-mail</label>
															<input type="text" class="form-control" id="email" name="email">
														</div>
													</div>
													<div class="col-sm-5">
														<div class="form-group label-floating">
															<label class="control-label">Telefone</label>
																<input type="text" class="form-control" id="telefone" name="telefone">
														</div>
													</div>
													<div class="col-sm-5 col-sm-offset-1">
														<div class="form-group label-floating">
															<label class="control-label">Logradouro</label>
															<input type="text" class="form-control" id="logradouro" name="logradouro">
														</div>
													</div>
													<div class="col-sm-5">
														<div class="form-group label-floating">
															<label class="control-label">Bairro</label>
															<input type="text" class="form-control" id="bairro" name="bairro">
														</div>
													</div>
													<div class="col-sm-5 col-sm-offset-1">
														<div class="form-group label-floating">
															<label class="control-label">Cidade</label>
															<input type="text" class="form-control" id="cidade" name="cidade">
														</div>
													</div>
													<div class="col-sm-5">
														<div class="form-group label-floating">
															<label class="control-label">Estado</label>
															<select name="estado" class="form-control">
																<option disabled="" selected=""></option>
																<option value="AC"> AC </option>
																<option value="AL"> AL </option>
																<option value="AP"> AP </option>
																<option value="AM"> AM </option>
																<option value="BA"> BA </option>
																<option value="CE"> CE </option>
																<option value="DF"> DF </option>
																<option value="ES"> ES </option>
																<option value="GO"> GO </option>
																<option value="MA"> MA </option>
																<option value="MT"> MT </option>
																<option value="MS"> MS </option>
																<option value="MG"> MG </option>
																<option value="PA"> PA </option>
																<option value="PB"> PB </option>
																<option value="PR"> PR </option>
																<option value="PE"> PE </option>
																<option value="PI"> PI </option>
																<option value="RJ"> RJ </option>
																<option value="RN"> RN </option>
																<option value="RS"> RS </option>
																<option value="RO"> RO </option>
																<option value="RR"> RR </option>
																<option value="SC"> SC </option>
																<option value="SP"> SP </option>
																<option value="SE"> SE </option>
																<option value="TO"> TO </option>		                                            	
															</select>
														</div>
													</div>	
												</div>
											</div>
											<div class="tab-pane" id="credito">
												<h4 class="info-text">Informe os dados do imóvel abaixo</h4>
												<div class="row">
													<div class="col-sm-12">
													</div>

													<div class="col-sm-5 col-sm-offset-1">
														<div class="form-group label-floating">
															<label class="control-label">Tipo</label>
															<select name="tipo" class="form-control">
																<option disabled="" selected=""></option>
																<option value="residencial"> Pessoal </option>
																<option value="comercial"> Consignado </option>	                                            	
															</select>														
														</div>
													</div>
													<div class="col-sm-5">
														<div class="form-group label-floating">
															<label class="control-label">Valor</label>
															<input type="text" class="form-control" id="valor" name="valor" required>
														</div>
													</div>
													<div class="col-sm-5 col-sm-offset-1">
														<div class="form-group label-floating">
															<label class="control-label">Prazo de pagamento</label>
															<select name="prazo" class="form-control" required>
																<option disabled="" selected=""></option>
																<option value="05anos"> 06 meses </option>
																<option value="10anos"> 12 meses </option>
																<option value="15anos"> 18 meses </option>
																<option value="20anos"> 24 meses </option>	 
																<option value="25anos"> 30 meses </option>
																<option value="30anos"> 36 meses </option>	 	                                            	
															</select>	
														</div>
													</div>
		
												</div>
											</div>
											<div class="tab-pane" id="simulacao">
												<h4 class="info-text">Veja os detalhes da simulação </h4>
												<div class="row">
													<div class="col-sm-5 col-sm-offset-1">
														<div class="form-group label-floating">
															<label class="control-label">Prazo</label>
															<input type="text" class="form-control" id="prazosimulacao" value="12 meses" name="prazosimulacao" readonly>
														</div>
													</div>
													<div class="col-sm-5">
														<div class="form-group label-floating">
															<label class="control-label">Taxa de Juros</label>
															<input type="text" class="form-control" id="taxa" name="taxa" value="10% aa" readonly>
														</div>
													</div>
													<div class="col-sm-5 col-sm-offset-1">
															<div class="form-group label-floating">
															<label class="control-label">Parcela</label>
															<input type="text" class="form-control" id="ultima" name="ultima" value="R$1.000,00" readonly>
														</div>
													</div>
												</div>
											</div>
											<div class="tab-pane" id="documentos">
												<h4 class="info-text">Documentos a serem enviados</h4>
												<div class="row">
													<div class="col-sm-8 col-sm-offset-2">
														<div class="mb-3">
															<label for="formFile" class="custom-file-label">Identidade</label>
															<input type="file" class="custom-file-input" id="identidade" name="identidade">
														</div>
													</div>
													<div class="col-sm-8 col-sm-offset-2">
														<div class="mb-3">
															<label for="formFile" class="custom-file-label">Certidão de Nascimento/Casamento</label>
															<input type="file" class="custom-file-input" id="certidao" name="certidao">
														</div>
													</div>
													<div class="col-sm-8 col-sm-offset-2">
														<div class="mb-3">
															<label for="formFile" class="custom-file-label">Comprovante de Renda</label>
															<input type="file" class="custom-file-input" id="renda" name="renda">
														</div>
													</div>
												</div>
											</div>
										</div>
										<div class="wizard-footer">
											<div class="pull-right">
												<input type='button' class='btn btn-next btn-fill btn-primary btn-wd' name='next' id='botaoproximo' value='Próximo' />
												<input type='submit' class='btn btn-finish btn-fill btn-primary btn-wd' name='finish' id='botaosubmit' value='Finalizar' />
											</div>
											<div class="pull-left">
												<input type='button' class='btn btn-previous btn-fill btn-default btn-wd' name='previous' id='botaoback' value='Voltar' />
											</div>
											<div class="clearfix"></div>
										</div>
									</form>
								</div>
							</div> <!-- wizard container -->
						</div>
					 <!-- row -->
				</div> <!--  big container -->
        

            </div>

        </main>

    <!--Main Layout-->
  </body>

